<h2>Topics</h2>
<ul class="collection">
  <%= for topic <-@topics do %>
    <li class="collection-item">
      <%= topic.title %>
    </li>
  <% end %>
</ul>

<div class="fixed-action-btn">
  <.link href={~p"/topics/new"} class="btn-floating btn-large waves-effect waves-light red">
    <i class="material-icons">add</i>
  </.link>
</div>
